@inherits CategoryBase
@page "/category/{Id:int}"

<div class="category">
    @foreach(var product in Products)
    {
        <div class="card">
            <div class="card-title">
                @product.Name
            </div>
            <div class="card-subtitle">
                @product.Description
            </div>
            <div class="card-text">
                @product.Price
            </div>
            <div class="d-flex gap-1">
                <button @onclick="async()=>{await Buy(product.Id);}">
                    Купить
                </button>
                <button @onclick="async()=>{await AddToBasket(product.Id);}">
                    Добавить в корзину
                </button>
                <button @onclick="async()=>{await AddToCompare(product.Id);}">
                    Добавить в сравнение
                </button>
            </div>
        </div>
    }
</div>